{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}
    <div class="content jumbotron">
    <h3>Struktura organizacyjna :</h3>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Position</th>
                <th>Symbol</th>
                <th>Superior</th>
                <th>Level</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for structure in structures %}
            <tr>
                <td><a href="{{ path('structure_show', { 'id': structure.id }) }}">{{ structure.id }}</a></td>
                <td>{{ structure.position }}</td>
                <td>{{ structure.symbol }}</td>
                <td>{{ structure.superior }}</td>
                <td>{{ structure.level }}</td>

                <td>
                    <ul>
                        <li>
                            <a href="{{ path('structure_show', { 'id': structure.position }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('structure_edit', { 'id': structure.position }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('structure_new') }}">Create a new structure</a>
        </li>
    </ul>
    </div>
{% endblock %}
